<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/document_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter document URL"
        android:inputType="textUri"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:layout_marginTop="100dp"/>

    <EditText
        android:id="@+id/sheet_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter sheet title"
        android:inputType="text"
        android:minHeight="48dp"
        android:minWidth="48dp"/>

    <Spinner
        android:id="@+id/object_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:minWidth="48dp" />

    <RadioGroup
        android:id="@+id/radio_group_colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_color_white"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="White" />

        <RadioButton
            android:id="@+id/radio_color_red"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Red" />
    </RadioGroup>

    <Spinner
        android:id="@+id/change_at_minutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:minWidth="48dp" />

    <Spinner
        android:id="@+id/object_number_at_column"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:minWidth="48dp" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Start" />

    <Button
        android:id="@+id/stop_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Stop" />
</LinearLayout>